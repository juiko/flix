<% if not client_signed_in? %>
  <li>
    <%= link_to "Registrarme", new_client_registration_path %>
  </li>

  <li>
    <%= link_to "Iniciar sesion", new_client_session_path %>
  </li>
<% else %>
  <li role="presentation" class="dropdown">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="true">
      <%= current_client.name %>
    </a>

    <ul class="dropdown-menu">

      <li>
	<%= link_to 'Configuracion', edit_client_path(current_client) %>
      </li>

      <li>
	<%= link_to 'Cerrar sesion', destroy_client_session_path, method: :delete %>
      </li>

      <li role="separator" class="divider"></li>

      <%# current_client.users.each do |user| %>
      <!-- <li> -->
	  <%#= link_to user.name, user %>
      <!-- </li> -->
      <%# end %>
    </ul>
<% end %>
