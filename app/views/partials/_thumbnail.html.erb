<div class="col-sm-4 col-lg-4 col-md-4">
  <div class="thumbnail">
    <img src="http://placehold.it/320x150" alt="">

    <div class="caption">
      <h4 class="pull-right">
	<%= content.klass %>
      </h4>
      <h4>
	<%= link_to content.normalized_title, content %>
      </h4>
    </div>
    <div class="ratings">

      <p class="pull-right">15 reviews</p>

      <%= render 'partials/votes', votable: content %>

    </div>
  </div>
</div>
