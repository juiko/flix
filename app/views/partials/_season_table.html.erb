<table class="table">
  <thead>
    <tr>
      <td>
	Numero
      </td>

      <td>
	Nombre
      </td>

      <td>
	Editar
      </td>

      <td>
	Eliminar
      </td>
    </tr>
  </thead>

  <tbody>
    <% season.sorted_episodes.each do |episode| %>
      <tr>
	<td>
	  <%= episode.number %>
	</td>

	<td>
	  <%= link_to episode.title, show_season_episode_path(season.show, season, episode) %>
	</td>

	<td>
	  <%= link_to 'Editar', edit_show_season_episode_path(season.show, season, episode) %>
	</td>

	<td>
	  <%= link_to 'Eliminar', show_season_episode_path(season.show, season, episode), method: :delete %>
      </tr>
    <% end %>
  </tbody>
</table>
