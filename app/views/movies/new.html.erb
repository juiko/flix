<h1>
  Crear Pelicula
</h1>

<%= bootstrap_form_for @pelicula do |p| %>

  <div class="field">
    <%= p.text_field :title, label: "Nombre" %>
  </div>

  <div class="field">
    <%= p.text_area :synopsis, size: "60x12" %>
  </div>

  <div class="field">
    <%= p.label :pelicula %>
    <%= p.file_field :movie %>
  </div>

  <%= p.date_field :date, label: 'Fecha' %>


  <%= p.submit "Create" %>
<% end %>
