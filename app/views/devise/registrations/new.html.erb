<div class="row center-xs">
	<div class="col-xs-8 col-md-6">
		<div class="box text.left">
			<h2> Registrarse </h2>

			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= devise_error_messages! %>

			<div class= "field">
				<%= f.label :nombre, "Nombre del Usuario" %><br />	
				<%= f.text_field :nombre, autofocus: true, class:"form-control" %>
			</div>

			<div class= "field">
				<%= f.label :telefono, "Telefono " %><br />	
				<%= f.text_field :telefono, autofocus: true, class:"form-control" %>
			</div>

			<div class= "field">
				<%= f.label :email %><br />	
				<%= f.email_field :email, autofocus: true, class:"form-control" %>
			</div>


			<div class="field">
				<%= f.label :password, "ContraseÃ±a" %>
				<% if @validatable %>	
				<em>(<%= @minimum_password_length %> Min 8 caracteres)</em>
				<% end %></br>
				<%= f.password_field :password, autocomplete:"off", class:"form-control" %>
			</div>
				
			<div class="field">
				<%= f.label :password_confirmation, "confirmar contraseÃ±a" %><br />
				<%= f.password_field :password_confirmation, autocomplete:"off", class:"form-control" %>
			</div>

			<div class="actions">
				<%= f.submit "Registrarse", class:"btn" %>
			</div>

			<% end %>

			<div class="actions">
				<%= render "devise/shared/links"%>
			</div>

		</div>
	</div>
</div>