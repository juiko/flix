<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
  
      <h2>Iniciar secion</h2>

      <%= form_for(resourse, as: resourse_name, url: session_path(resourse_name)) do |f| %>

      <div class="field">
        <%= f.label :email %></br>
        <%= f.email_field :email, autofocus: true, class:"form-control" %>
      </div>

      <div class="field">
        <%= f.label :password %></br>
        <%= f.email_field :password, autocomplete: "off" , class:"form-control"%>
      </div>


      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %></br>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="acctions">
        <%= f.submit "Iniciar Sesion"%>
      </div>
      <% end %>

    <%= render "devise/shared/links" %>


  </div>
</div>


